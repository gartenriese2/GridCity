<Window x:Class="GridCity.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GridCity.GUI"
        AllowsTransparency="True" WindowStyle="None"
        Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <TextBlock Background="White" Width="150" Height="60" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30">
        <local:DateInfoView x:Name="dataInfoView"></local:DateInfoView>
    </TextBlock>
</Window>
